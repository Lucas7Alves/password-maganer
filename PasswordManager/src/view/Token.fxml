<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="controller.TokenController" prefWidth="400"
	prefHeight="300" style="-fx-background-color: #323624;">
	<VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50"
		prefWidth="300">
		<Label text="Verificação 2FA"
			style="-fx-text-fill: white; -fx-font-size: 20;" />
		<Label text="Digite o token enviado por e-mail:"
			style="-fx-text-fill: white;" />
		<TextField fx:id="tokenField" promptText="Token" />
		<Button text="Verificar" onAction="#handleVerificar"
			style="-fx-background-color: #7828A1; -fx-text-fill: white;" />
	</VBox>
</AnchorPane>
